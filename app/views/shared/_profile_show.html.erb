<div class="profile-information">
  <div class="row">
    <div class="col-xs-6 col-sm-8">
      <div class="user-description">
        <h2><%= user.first_name.capitalize %> <%= user.last_name.capitalize %></h2>
        <div class="text-inline">
          <p class="nb-follower"><%= user.followers.count %> followers  â€” </p>
          <p class="nb-following"><%= user.following.count %> following </p>
        </div>
        <div class="edit-link">
          <% if current_user != user %>
            <div class="follow-actions" data-id="<%= user.id %>">
              <%= follow_action_for(user) %>
            </div>
          <% end %>
        </div>
        <% if user == current_user %>
          <br>
          <br>
          <%= link_to "Create a dream", new_dream_path, class: "btn-dreamlist" %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-6 col-sm-4 text-center">
      <%= user_avatar_tag user, class: 'avatar-large user-avatar' %>
    </div>
    <div class="col-xs-12">
      <br>
      <br>
      <br>

      <div class="dreams-menu hidden-xs hidden-sm">
        <div class="navbar-right-links text-center">
          <div class="tabs">
            <%= link_to 'Dreams', '#', class: "navbar-dreamlist-button text-center tab", "data-target" => "#tab-user-dreams-in-cat" %>
            <%= link_to 'Dreams liked', '#', class: "navbar-dreamlist-button text-center tab", "data-target" => "#tab-loved-dreams" %>
            <%= link_to 'Following', '#', class: " navbar-dreamlist-button text-center tab", "data-target" => "#tab-followed-users" %>
            <%= link_to 'Followers', '#', class: " navbar-dreamlist-button text-center tab", "data-target" => "#tab-followers" %>
            <%= link_to "Following's dreams", '#', class: " navbar-dreamlist-button text-center tab", "data-target" => "#tab-followed-dreams" %>
            <%= link_to "Realized dreams", '#', class: " navbar-dreamlist-button text-center tab", "data-target" => "#tab-realized-dreams" %>
          </div>
        </div>
      </div>
      <div class="dreams-menu mobile hidden-md hidden-lg">
        <div class="navbar-left-links text-center mobile">
          <div class="tabs-name">
            <%= link_to 'Dreams', '#', class: "navbar-dreamlist-button text-center tab-name active", "data-target" => "#tab-user-dreams-in-cat" %>
            <%= link_to 'Dreams liked', '#', class: "navbar-dreamlist-button text-center tab-name hidden", "data-target" => "#tab-loved-dreams" %>
            <%= link_to 'Following', '#', class: " navbar-dreamlist-button text-center tab-name hidden", "data-target" => "#tab-followed-users" %>
            <%= link_to 'Followers', '#', class: " navbar-dreamlist-button text-center tab-name hidden", "data-target" => "#tab-followers" %>
            <%= link_to "Following's dreams", '#', class: " navbar-dreamlist-button text-center tab-name hidden", "data-target" => "#tab-followed-dreams" %>
            <%= link_to "Realized dreams", '#', class: " navbar-dreamlist-button text-center tab-name hidden", "data-target" => "#tab-realized-dreams" %>
          </div>
          <div class="tabs">
            <div class="dropdown">
              <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
              <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
                <li><%= link_to 'Dreams', '#', "data-target" => "#tab-user-dreams-in-cat", class: 'tab' %></li>
                <li><%= link_to 'Dreams liked', '#', "data-target" => "#tab-loved-dreams", class: 'tab' %></li>
                <li><%= link_to 'Following', '#', "data-target" => "#tab-followed-users", class: 'tab' %></li>
                <li><%= link_to 'Followers', '#', "data-target" => "#tab-followers", class: 'tab' %></li>
                <li><%= link_to "Following's dreams", '#', "data-target" => "#tab-followed-dreams", class: 'tab' %></li>
                <li><%= link_to "Realized dreams", '#', "data-target" => "#tab-realized-dreams", class: 'tab' %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

