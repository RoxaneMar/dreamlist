<div class="col-xs-12 col-sm-4">
  <% if dream.kitty.present? %>
  <div class="dream-card <%= dream.category %>">
    <%= link_to '', dream_path(dream), class: 'card-link' %>
    <div class="dream-picture" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.2) 50%), url('<%= dream_picture_path(dream) %>');">
      <div class="like-actions" data-id="<%= dream.id %>">
        <%= like_action_for(dream) %>
      </div>
      <%= link_to "Contribute", dream_path(dream), class: 'contribute' %>
      <%= user_avatar_tag dream.user, class: 'avatar' %>
      <div class="avatar"></div>
    </div>
    <div class="dream-text">
      <h4><%= dream.title %></h4>
      <% if !(dream.kitty.goal_amount.to_i == 0 && dream.kitty.total_contribution_public.to_i == 0) || dream.kitty.secret? %>
        <div class="global-bar">
          <div class="participation-bar" style="width: <%= number_to_percentage(dream.kitty.contribution_avancement_public, precision: 0); %>"></div><% if current_user != dream.user %><div class="participation-bar-private" style="width: <%= number_to_percentage(dream.kitty.contribution_avancement_private, precision: 0); %>"></div><% end %>
        </div>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
