<!-- information about kitty evolution -->
<div class="kitty-info-and-btn">
  <div class="kitty-details-no-amount">

    <div class="collected-amount">
      <% if @dream.kitty.private? %>
        <h4 class="strong-green">You already saved <%= @dream.kitty.total_contribution %> € for your dream</h4>
      <% else %>
        <h4 class="strong-green"><%= @dream.kitty.total_visible_contribution %> € collected</h4>
      <% end %>
    </div>

    <div class="secondary-elements">
      <% if !@dream.kitty.private? %>
        <div class="in-column">
          <p class="strong">
            <%= @dream.kitty.public_contributors_count %>
          </p>
          <p>contributors</p>
        </div>
      <% end %>

      <div class="in-column">
        <% if dream.end_date.present? %>
          <p class="strong"><%= distance_of_time_in_words(Time.now, dream.end_date) %></p>
          <p>left</p>
        <% else %>
          <p class="strong">No limit date </p>
          <p>for this dream</p>
        <% end %>
      </div>
    </div>

  </div>
</div>


