<p id="notice"><%= notice %></p>

<div class="wrapper">
  <div class="banner-dream-show" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.4) 50%), url('<%= cl_image_path dream_picture_path(@dream) %>');">
    <% if @dream.category.present? %>
      <div class="banner-title">
        <h4><%=@dream.user.first_name.capitalize%>'s <%=@dream.category.downcase%> dream</h4>
      </div>
    <% else %>
      <div class="banner-title">
        <h4><%=@dream.user.first_name.capitalize%>'s dream</h4>
      </div>
    <% end %>
    <% if @dream.kitty.private? == false %>
      <div class="banner-link">
        <%= link_to "Contribute", '#', class: 'btn-dreamlist' %>
      </div>
    <% else @dream.kitty.private? && current_user == @dream.user %>
      <div class="banner-link">
        <%= link_to "Contribute", '#', class: 'btn-dreamlist' %>
      </div>
    <% end %>
  </div>
  <div class="dream-show-description">
    <div class="container">
      <div class="row">
        <% if @dream.kitty.goal_amount > 0 %>
          <% if @dream.kitty.private? == false || current_user == @dream.user %>
            <%= render 'dream_with_amount_desc', dream: @dream, user: @user %>
          <% elsif @dream.kitty.private? && current_user != @dream.user %>
            <%= render 'dream_no_amount_desc', dream: @dream, user: @user %>
          <% end %>
        <% else  %>
          <% if @dream.kitty.private? == false %>
            <%= render 'dream_0_amount_desc', dream: @dream, user: @user %>
          <% else %>
            <%= render 'dream_no_amount_desc', dream: @dream, user: @user %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
