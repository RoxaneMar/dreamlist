<p id="notice"><%= notice %></p>

<div class="wrapper">
  <div class="banner-dream-show" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.4) 50%), url('<%= cl_image_path @dream.picture.path %>');">
      <div class="banner-title">
        <h4><%=@dream.user.first_name.capitalize%>'s <%=@dream.category.name.downcase%> dream</h4>
      </div>
      <div class="banner-link">
        <%= link_to "Contribute", '#', class:'btn-dreamlist' %>
      </div>
  </div>
  <div class="dream-show-description">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6">
          <div class="description">
            <h4><%= @dream.title %></h4>
            <hr>
            <%= @dream.description %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6">
          <div class="other-info">
            <%= cl_image_tag @dream.user.avatar.path, class: 'avatar-large' %>
            <div class="global-bar">
              <div class="participation-bar" style="width: 35%"></div>
            </div>
            <div class="amount">
              <p>Goal: collect <%= @dream.goal_amount %>â‚¬ before <%= @dream.end_date.strftime("%B %d, %Y") %></p>
            </div>
          </div>
        </div>
        <% if @user == @dream.user %>
          <div class="col-xs-12">
            <div class="edit-link">
            <%= link_to 'Edit your dream', edit_dream_path(@dream), class: 'btn-dreamlist-subtile' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>





