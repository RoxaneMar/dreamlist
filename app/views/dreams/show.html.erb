<%= render 'shared/show_dream_navbar' %>
  <div class="wrapper">
    <div class="container">

        <div class="row">
          <div class="col-xs-12">

          <!-- banner -->
          <div class="banner-dream-show" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.4) 50%), url('<%= dream_picture_path(@dream) %>');">

            <!-- avatar dream owner -->
            <%= link_to dreams_profile_path(@dream.user) do %>
              <%= user_avatar_tag @dream.user, class: 'avatar-large' %>
            <% end %>

            <!-- edit your dream -->
            <% if current_user == @dream.user %>
              <div class="col-xs-12">
                <div class="edit-link">
                <%= link_to 'Edit your dream', edit_dream_path(dream), class: 'btn-dreamlist-subtile' %>
                </div>
              </div>
            <% end %>
          </div>

          <!--informations: description dream & kitty -->
          <div class="dream-show-description">
            <% if @dream.kitty.goal_amount > 0 %>
                <%= render 'dream_with_amount_desc', dream: @dream, user: @user %>
            <% else %>
                <%= render 'dream_no_amount_desc', dream: @dream, user: @user %>
            <% end %>
          </div>

          <!-- likes -->
          <div class="row">
            <div class="col-xs-12">
              <div class="dream-lovers">
              <% if @dream.likes.count > 0 %>
                  <h4>People who loved this dream</h4>
                  <p class="nb-likes"><%= @dream.likes.count %></p>
                  <% @dream.likes.each do |like| %>
                    <%= link_to dreams_profile_path(like.user) do %>
                      <%= user_avatar_tag like.user, class: 'avatar' %>
                    <% end %>
                  <% end %>
                  <% end %>
                </div>
              </div>
            </div>

          </div>

      </div>

    </div>
  </div>

