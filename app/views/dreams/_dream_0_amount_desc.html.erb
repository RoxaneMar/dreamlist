<div class="col-xs-12">
  <div class="description">
    <%= cl_image_tag dream.user.avatar.path, class: 'avatar-large' %>
    <h4><%= dream.title %></h4>
    <hr>
    <%= dream.description %>
    <p>No amount defined yet</p>
  </div>
</div>
<% if user == dream.user %>
  <div class="col-xs-12">
    <div class="edit-link">
    <%= link_to 'Edit your dream', edit_dream_path(dream), class: 'btn-dreamlist-subtile' %>
    </div>
  </div>
<% end %>
