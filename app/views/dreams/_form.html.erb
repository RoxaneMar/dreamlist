<%= simple_form_for(@dream) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :goal_amount %>
    <%= f.input :end_date %>
    <%= f.input :picture, as: :attachinary %>
    <%= f.association :user %>
    <%= f.association :category %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
