<div class="create-dream-card">
  <div class="row">
    <%= simple_form_for([@dream, @kitty]) do |f| %>
      <div class="content-form">
        <div class="col-xs-12">
          <div class="form-inputs">
            <%= f.input :goal_amount, label: false, placeholder: "My kitty goal is..." %>
            <%= f.input :private, label: "I'm the only one who can participate to this dream" %>
          </div>
        </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Create a Money Pot", class: "btn-dreamlist" %>
      </div>

    <% end %>
    <div class="col-xs-6">
      <%= simple_form_for([@dream, @kitty]) do |f| %>

        <div class="form-inputs">
          <%= f.input :goal_amount, as: :hidden, :input_html => { :value => 0 } %>
          <%= f.input :private, as: :hidden, :input_html => { :value => false } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Later", class: "btn-dreamlist-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
