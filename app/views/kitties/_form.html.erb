<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= simple_form_for([@dream, @kitty]) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :goal_amount, label: "Amount needed" %>
          <%= f.input :private, label: "I'm the only one who can participate to this dream" %>
        </div>
    </div>
    <div class="col-xs-6">
        <div class="form-actions">
          <%= f.button :submit, "Create a Kitty" %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-6">
      <%= simple_form_for([@dream, @kitty]) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :goal_amount, as: :hidden, :input_html => { :value => 0 } %>
          <%= f.input :private, as: :hidden, :input_html => { :value => false } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Later", class: "btn-dreamlist-subtile" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

