<div class="wrapper">
  <!-- banner content -->
  <div class="banner" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.2) 50%), url('<%= image_path('background.jpg') %>');">
    <div class="banner-content">
      <h1>Fulfill your dreams</h1>
      <p>List and share your dreams to make them come true.</p>
      <%= link_to "Create a dream", new_dream_path, id: "btn-dreamlist-banner" %>
      <!-- <a id="btn-dreamlist-banner">Create your dream</a> -->
    </div>
  </div>

  <!-- index of cards -->
  <div class="dreams-cards-content">
    <div class="container">
      <div class="row">
        <% @dreams.each do |dream| %>
          <%= render 'shared/dream_card', dream: dream %>
        <% end %>
      </div>
    </div>
  </div>
</div>
