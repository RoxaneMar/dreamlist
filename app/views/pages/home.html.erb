<div class="wrapper">
  <div class="banner" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.4) 50%), url('<%= image_path('background.jpg') %>');">

      <div class="banner-content">
        <h1>Fulfill your dreams</h1>
        <p>List and share your dreams to make them come true.</p>
        <a id="btn-dreamlist-banner">Create your dream</a>
      </div>
  </div>
  <div class="dreams-cards-content">
    <div class="container">
      <div class="row">
        <% @dreams.each do |dream| %>
        <div class="col-xs-12 col-sm-4">
          <div class="dream-card">
            <%= link_to '', dream_path(dream), class: 'card-link' %>
            <div class="dream-picture" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.4)), url('<%= cl_image_path dream.picture.path %>');">
              <%= image_tag "coeur-green.png", class: "like" %>
              <%= link_to "Contribute", dreams_profile_path, class: 'contribute' %>
              <%= cl_image_tag dream.user.avatar.path, class: 'avatar' %>
              <div class="avatar"></div>
            </div>
            <div class="dream-text">
              <h4><%= dream.title %></h4>
              <div class="global-bar">
                <div class="participation-bar" style="width: 25%"></div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
